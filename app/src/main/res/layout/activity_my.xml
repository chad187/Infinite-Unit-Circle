<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/unitcircle"
        android:layout_gravity="center_horizontal|bottom">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:checked="false"
            android:clickable="true"
            android:enabled="true"
            android:textOff="Unit Circle"
            android:textOn="Coterminal Angles"
            android:cursorVisible="false"
            android:freezesText="false"
            android:hapticFeedbackEnabled="true"
            android:thumb="@android:color/holo_blue_dark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_button"
            android:id="@+id/info_button"
            android:background="#ff0098cb"
            android:onClick="doButtonClick"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/switch1"
            android:layout_toStartOf="@+id/switch1"
            android:layout_marginRight="245dp"
            android:layout_marginEnd="245dp"
            android:layout_alignTop="@+id/switch1"
            android:textColor="#fff1f3f4" />

    </RelativeLayout>

</FrameLayout>